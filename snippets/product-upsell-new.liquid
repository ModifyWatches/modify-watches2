<!-- /snippets/product-grid-item.liquid -->
{% assign collab = product.vendor | handleize %}
{% assign sold_out = true %}
{% if product.available %}
  {% assign sold_out = false %}
{% endif %}

<div class="productsGrid feature-tiles" data-id="{{product.variants[0].id}}">

	<a href="{{ product.url | within: collection }}" class="grid__image">
	    <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" style="border:0px;">
	    <div class="buttonFrame" ><button class="btn--secondary">ADD TO CART</button></div>
		<div class="productsInfo">
			
		  <p class="h6 text-center">
		  {{ product.title  | truncatewords:6 | truncate:35}}
		  </p>
		   	 
		  {% if product.available %}
		  	<p class="text-center super-small small-margin">
		
		  		{% if product.type == 'Sport Watch' %}
		    		 $50.00
		    	{% elsif  product.type == 'Alloy watch' %}
		        	$75.00
		        {% elsif  product.type == 'Watch' %}
		        	$50.00
		        {% elsif  product.type == 'Strap' %}
		        	$15.00
		        {% elsif  product.type == 'Nylon' %}
		        	$15.00
		        {% elsif  product.type == 'LeatherStrap' %}
		        	$35.00
		        {% else %}
		        	$115.00	
		        {% endif %}	
			   
		  	</p>
		  		
		  {% endif %}	
		   <div class="hide small--show h6 orange-text">ADD TO CART</div>
		</div>
	</a>
	<div style="clear:both"></div>
</div>
